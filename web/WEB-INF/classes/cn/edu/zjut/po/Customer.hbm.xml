<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.zjut.po.Customer" table="customer" schema="mydb">
        <id name="customerId">
            <column name="customerID" sql-type="int(11)"/>
            <generator class="increment"/>
        </id>
        <property name="account">
            <column name="account" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20" not-null="false"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="tinyint(1)" not-null="false"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" not-null="false"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(20)" length="20" not-null="false"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(100)" length="100" not-null="false"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(200)" length="200" not-null="false"/>
        </property>
        <property name="zipcode">
            <column name="zipcode" sql-type="varchar(10)" length="10" not-null="false"/>
        </property>
        <property name="fax">
            <column name="fax" sql-type="varchar(20)" length="20" not-null="false"/>
        </property>
    </class>
</hibernate-mapping>